}

#MACRO {\eK}
{
	#if {&{doorFound}}
	{
		#if {&{doorName}}
		{
			open $doorName $lastDirection
		};
		#else
		{
			#echo {Nothing to open.}
		}
	};
	#else
	{
		enter portal
	}
}

